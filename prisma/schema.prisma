generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Movie {
  imdbId        String   @id
  title         String
  year          String
  type          String
  posterUrl     String?
  plot          String?
  genre         String?
  rated         String?
  runtime       String?
  director      String?
  actors        String?
  ratingsJson   String?
  lastFetchedAt DateTime @default(now())
}
